<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  	<strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<h2>Comments</h2>
<% article.comments.forEach(comment => { %>
	<p><%= comment.dataValues.content %></p>
	<p>- <%= comment.dataValues.name %></p>
<% }) %>

<h4>Comment on this post</h4>
<form method="POST" action="/comments">
	<div class="form-group">
		<label for="name-input">Name</label>
		<input id="name-input" class="form-control" type="text" name="name" required>
	</div>
	<div class="form-group">
		<label for="content-input">Content</label>
		<input id="content-input" class="form-control" type="text" name="content" required>
	</div>
	<input hidden value="<%= article.id %>" name="articleId">
	<input type="submit" class="btn btn-primary">
</form>

<a href="/">&larr; Back Home</a>
